<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Company Profiles</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @companies.each do |company| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-2"><%= company.name %></h2>
          <p class="text-gray-600 mb-4"><%= company.description %></p>
          <div class="flex justify-between items-center mt-4">
            <%= link_to "View Profile", company_profile_path(company.slug), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
